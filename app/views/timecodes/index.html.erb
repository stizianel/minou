<h1>Elenco codici</h1>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Descrizione</th>
      <th>Tipo</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @timecodes.each do |timecode| %>
      <tr>
        <td><%= timecode.descr %></td>
        <td><%= timecode.typo %></td>
        <td><%= link_to 'Vedi', timecode %></td>
        <td><%= link_to 'Aggiorna', edit_timecode_path(timecode) %></td>
        <td><%= link_to 'Cancella', timecode, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuovo Codice', new_timecode_path %>
