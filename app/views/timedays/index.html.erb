<h1>Listing timedays</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Giorno</th>
      <th>Cod.1</th>
      <th>Ore 1</th>
      <th>Cod.2</th>
      <th>Ore 2</th>
      <th>Cod.3</th>
      <th>Ore 3</th>
      <th>Timesheet</th>
      <th>Note</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @timedays.each do |timeday| %>
      <tr>
        <td><%= timeday.day %></td>
        <td><%= timeday.codice1.descr %></td>
        <td><%= timeday.hour1 %></td>
        <td><%= unless timeday.codice2.nil?
                timeday.codice2.descr
                end%></td>
        <td><%= timeday.hour2 %></td>
        <td><%= unless timeday.codice3.nil?
                timeday.codice3.descr 
                end%></td>
        <td><%= timeday.hour3 %></td>
        <td><%= timeday.timesheet_id %></td>
        <td><%= timeday.note %></td>
        <td><%= link_to 'Show', timeday %></td>
        <td><%= link_to 'Edit', edit_timeday_path(timeday) %></td>
        <td><%= link_to 'Destroy', timeday, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

