<%= simple_form_for(@timeday) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :day %>
    <%= f.association :codice1, label_method: :descr %>
    <%= f.input :hour1, label: "Ore 1" %>
    <%= f.association :codice2, label_method: :descr %>
    <%= f.input :hour2, label: "Ore 2" %>
    <%= f.association :codice3, label_method: :descr %>
    <%= f.input :hour3, label: "Ore 3" %>
    <%= f.input :timesheet_id %>
    <%= f.input :note %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
