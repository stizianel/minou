<h2>Cambia la password</h2>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, :as => :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password, :label => "Nuova password", :required => true, :autofocus => true %>
    <%= f.input :password_confirmation, :label => "Confermi la nuova password ?", :required => true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Cambia la password" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
